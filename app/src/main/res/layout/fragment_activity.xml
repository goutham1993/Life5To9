<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.fragments.ActivityFragment">

    <!-- Segmented Control: Daily / Weekly -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupViewMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding"
        android:layout_marginTop="@dimen/space_sm"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/buttonDailyView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDailyView"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/segmented_control_height"
            android:layout_weight="1"
            android:text="Daily"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/radius_chip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonWeeklyView"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/segmented_control_height"
            android:layout_weight="1"
            android:text="Weekly"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/radius_chip" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Compact Date Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDateHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding"
        android:layout_marginTop="@dimen/space_sm"
        android:paddingVertical="@dimen/space_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleGroupViewMode">

        <!-- Previous Day Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPreviousDay"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Previous"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Day label -->
        <TextView
            android:id="@+id/textViewSelectedDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textAppearance="@style/TextAppearance.Life.Label"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/textViewSelectedDate"
            app:layout_constraintEnd_toStartOf="@id/buttonNextDay"
            app:layout_constraintStart_toEndOf="@id/buttonPreviousDay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Date display -->
        <TextView
            android:id="@+id/textViewSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Dec 15, 2024"
            android:textAppearance="@style/TextAppearance.Life.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonNextDay"
            app:layout_constraintStart_toEndOf="@id/buttonPreviousDay"
            app:layout_constraintTop_toBottomOf="@id/textViewSelectedDay" />

        <!-- Next Day Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNextDay"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Next"
            app:icon="@drawable/ic_arrow_forward"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonSelectDate"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calendar picker button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectDate"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Select Date"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quick Add Chip Row -->
    <LinearLayout
        android:id="@+id/layoutQuickAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_sm"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/screen_padding"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDateHeader">

        <TextView
            android:id="@+id/textViewRecentActivitiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Add"
            android:textAppearance="@style/TextAppearance.Life.Label"
            android:layout_marginBottom="@dimen/space_sm" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clipToPadding="false">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupQuickAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="@dimen/space_sm" />

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Activities List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActivities"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/space_sm"
        android:paddingBottom="@dimen/space_xl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutQuickAdd"
        tools:listitem="@layout/item_activity" />

    <!-- Empty State -->
    <include
        android:id="@+id/emptyState"
        layout="@layout/view_empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutQuickAdd" />

</androidx.constraintlayout.widget.ConstraintLayout>
