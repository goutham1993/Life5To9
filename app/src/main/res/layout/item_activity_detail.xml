<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:paddingStart="32dp"
    android:background="@color/surface_variant">

    <TextView
        android:id="@+id/textViewActivityNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Activity notes"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/on_surface_variant"
        app:layout_constraintEnd_toStartOf="@+id/textViewActivityTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5h"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewActivityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Dec 15, 2023"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/on_surface_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewActivityNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>



