<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_row_height"
        android:paddingHorizontal="@dimen/screen_padding"
        android:paddingVertical="@dimen/space_sm">

        <!-- Leading emoji/icon -->
        <TextView
            android:id="@+id/textViewCategoryEmoji"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:gravity="center"
            android:text="ðŸ“"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginEnd="@dimen/space_sm"
            android:text="Category Name"
            android:textAppearance="@style/TextAppearance.Life.Title"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/textViewActivityCount"
            app:layout_constraintStart_toEndOf="@id/textViewCategoryEmoji"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewTotalTime"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Supporting text -->
        <TextView
            android:id="@+id/textViewTotalTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_md"
            android:layout_marginTop="2dp"
            android:text="0.0 hours total"
            android:textAppearance="@style/TextAppearance.Life.Body"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/textViewActivityCount"
            app:layout_constraintStart_toEndOf="@id/textViewCategoryEmoji"
            app:layout_constraintTop_toBottomOf="@id/textViewCategoryName"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Trailing info -->
        <TextView
            android:id="@+id/textViewActivityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="@style/TextAppearance.Life.Body"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@id/textViewIsDefault"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Default indicator (star or subtle text) -->
        <TextView
            android:id="@+id/textViewIsDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_xs"
            android:text="â­"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Divider -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        app:dividerColor="?attr/colorOutlineVariant" />

</LinearLayout>
