<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/screen_padding"
    android:layout_marginVertical="@dimen/space_xs"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/elevation_none"
    app:strokeWidth="@dimen/stroke_thin"
    app:strokeColor="?attr/colorOutlineVariant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Category name with emoji -->
        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm"
            android:text="Category"
            android:textAppearance="@style/TextAppearance.Life.Title"
            app:layout_constraintEnd_toStartOf="@id/textViewTimeSpent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Time spent -->
        <TextView
            android:id="@+id/textViewTimeSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5h"
            android:textAppearance="@style/TextAppearance.Life.H3"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Notes -->
        <TextView
            android:id="@+id/textViewNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:text="Activity notes and description"
            android:textAppearance="@style/TextAppearance.Life.Body"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewCategoryName" />

        <!-- Date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            android:text="Dec 15, 2024"
            android:textAppearance="@style/TextAppearance.Life.Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNotes" />

        <!-- Time of day -->
        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            android:text="5:30 PM"
            android:textAppearance="@style/TextAppearance.Life.Label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNotes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
