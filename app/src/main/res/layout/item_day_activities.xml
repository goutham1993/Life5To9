<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Day Header (Clickable) -->
        <LinearLayout
            android:id="@+id/layoutDayHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewDayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monday"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/textViewDayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 16"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/textViewDayTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5.2h"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/imageViewExpand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand/Collapse" />

        </LinearLayout>

        <!-- Category Preview -->
        <TextView
            android:id="@+id/textViewCategoryPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="ðŸ’¼ Work, ðŸ“š Learning, ðŸ’ª Fitness"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Activities List -->
        <LinearLayout
            android:id="@+id/layoutActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Activities will be added here programmatically -->

        </LinearLayout>

        <!-- Empty State -->
        <TextView
            android:id="@+id/textViewNoActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No activities for this day"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
