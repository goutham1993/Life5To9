<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Insights"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginBottom="16dp" />

        <!-- Category Dropdown -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCategoryDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Category"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/categoryDropdownLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/primary">

                    <AutoCompleteTextView
                        android:id="@+id/categoryDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Choose a category"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============ WEEKLY SECTION ============ -->

        <!-- Weekly Navigation Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWeeklyPrevious"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="24dp" />

            <TextView
                android:id="@+id/textViewWeeklyPeriodLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="This Week"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWeeklyNext"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="24dp" />

        </LinearLayout>

        <!-- Weekly Total Hours -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeeklyTotalHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Total:"
                    android:textSize="15sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/textViewWeeklyTotalHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0h"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Weekly Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeeklyChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewWeeklyChartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours per Day"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/weeklyBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp" />

                <!-- Weekly Empty state -->
                <LinearLayout
                    android:id="@+id/layoutWeeklyEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textViewWeeklyEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select a category to see weekly insights"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============ MONTHLY (YEAR VIEW) SECTION ============ -->

        <!-- Year Navigation Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMonthlyPrevious"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="24dp" />

            <TextView
                android:id="@+id/textViewMonthlyPeriodLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2026"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMonthlyNext"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="24dp" />

        </LinearLayout>

        <!-- Yearly Total Hours -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMonthlyTotalHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yearly Total:"
                    android:textSize="15sp"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/textViewMonthlyTotalHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0h"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Monthly Totals Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMonthlyChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewMonthlyChartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours per Month"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/monthlyBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp" />

                <!-- Monthly Empty state -->
                <LinearLayout
                    android:id="@+id/layoutMonthlyEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textViewMonthlyEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select a category to see monthly insights"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
