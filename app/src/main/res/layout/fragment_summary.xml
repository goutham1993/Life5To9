<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.fragments.SummaryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <!-- Period Selector (Week / Month / Weekend) -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/buttonPeriodWeek">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPeriodWeek"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/segmented_control_height"
                    android:layout_weight="1"
                    android:text="Week"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/radius_chip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPeriodMonth"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/segmented_control_height"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/radius_chip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPeriodWeekend"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/segmented_control_height"
                    android:layout_weight="1"
                    android:text="Weekend"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/radius_chip" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Period Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/space_md">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPrevPeriod"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Previous"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/textViewPeriodLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="This Week"
                    android:textAppearance="@style/TextAppearance.Life.Title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonNextPeriod"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Next"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorOnSurface" />

            </LinearLayout>

            <!-- 1. Hero Card - Total Time -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_none"
                app:strokeWidth="@dimen/stroke_thin"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/textViewHeroLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total time tracked"
                        android:textAppearance="@style/TextAppearance.Life.Label" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewHeroValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_xs"
                            android:text="0.0h"
                            android:textAppearance="@style/TextAppearance.Life.Display"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/textViewHeroDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_sm"
                            android:paddingHorizontal="@dimen/space_sm"
                            android:paddingVertical="@dimen/space_xs"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.Life.Label"
                            android:textColor="?attr/colorPrimary"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewHeroSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:text="vs last period"
                        android:textAppearance="@style/TextAppearance.Life.Body" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 2. Top Categories Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTopCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_none"
                app:strokeWidth="@dimen/stroke_thin"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:text="Top Categories"
                        android:textAppearance="@style/TextAppearance.Life.Title" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewCategoryBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_category_summary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Patterns Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPatterns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_none"
                app:strokeWidth="@dimen/stroke_thin"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:text="Patterns"
                        android:textAppearance="@style/TextAppearance.Life.Title" />

                    <!-- Most Active Day -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/space_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Most Active Day"
                            android:textAppearance="@style/TextAppearance.Life.Body" />

                        <TextView
                            android:id="@+id/textViewMostActiveDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="@style/TextAppearance.Life.Title"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <!-- Peak Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/space_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Active Days"
                            android:textAppearance="@style/TextAppearance.Life.Body" />

                        <TextView
                            android:id="@+id/textViewActiveDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="@style/TextAppearance.Life.Title"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutlineVariant" />

                    <!-- Biggest Change -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/space_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avg. per Day"
                            android:textAppearance="@style/TextAppearance.Life.Body" />

                        <TextView
                            android:id="@+id/textViewAvgPerDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="@style/TextAppearance.Life.Title"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Nudge Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNudge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_none"
                app:strokeWidth="@dimen/stroke_thin"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/textViewNudgeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uD83D\uDCA1 Insight"
                        android:textAppearance="@style/TextAppearance.Life.Title"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/textViewNudgeMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="Keep tracking to see personalized insights!"
                        android:textAppearance="@style/TextAppearance.Life.Body"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_xl" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
