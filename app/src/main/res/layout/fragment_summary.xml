<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.SummaryFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Weekly Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeeklyPrevious"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Previous week"
                            app:icon="@android:drawable/ic_media_previous"
                            app:iconSize="24dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textViewWeeklyPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Week"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/textViewWeeklyTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0 hours"
                                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total time tracked"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeeklyNext"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Next week"
                            app:icon="@android:drawable/ic_media_next"
                            app:iconSize="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeeklyDropdown"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Toggle weekly breakdown"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutWeeklyBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Breakdown"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewWeeklyCategoryBreakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_category_summary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weekend Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeekendPrevious"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Previous weekend"
                            app:icon="@android:drawable/ic_media_previous"
                            app:iconSize="24dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textViewWeekendPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Weekend"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/textViewWeekendTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0 hours"
                                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total time tracked"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeekendNext"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Next weekend"
                            app:icon="@android:drawable/ic_media_next"
                            app:iconSize="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonWeekendDropdown"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Toggle weekend breakdown"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutWeekendBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Breakdown"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewWeekendCategoryBreakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_category_summary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Monthly Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonMonthlyPrevious"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Previous month"
                            app:icon="@android:drawable/ic_media_previous"
                            app:iconSize="24dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textViewMonthlyPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Month"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textColor="@color/on_surface" />

                            <TextView
                                android:id="@+id/textViewMonthlyTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0 hours"
                                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total time tracked"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonMonthlyNext"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Next month"
                            app:icon="@android:drawable/ic_media_next"
                            app:iconSize="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonMonthlyDropdown"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Toggle monthly breakdown"
                            app:icon="@android:drawable/ic_menu_more"
                            app:iconSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMonthlyBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Breakdown"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewMonthlyCategoryBreakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="600dp"
                            android:maxHeight="800dp"
                            tools:listitem="@layout/item_category_summary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
