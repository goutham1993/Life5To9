<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/heroCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/elevation_none"
    app:strokeWidth="@dimen/stroke_thin"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Label -->
        <TextView
            android:id="@+id/textViewHeroLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total time tracked"
            android:textAppearance="@style/TextAppearance.Life.Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Value (big number) -->
        <TextView
            android:id="@+id/textViewHeroValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:text="24.5h"
            android:textAppearance="@style/TextAppearance.Life.Display"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewHeroLabel" />

        <!-- Delta badge -->
        <TextView
            android:id="@+id/textViewHeroDelta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_sm"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/rounded_card_background"
            android:text="+2.3h"
            android:textAppearance="@style/TextAppearance.Life.Label"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/textViewHeroValue"
            app:layout_constraintStart_toEndOf="@id/textViewHeroValue" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textViewHeroSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:text="vs last week"
            android:textAppearance="@style/TextAppearance.Life.Body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewHeroValue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
