<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewCategoryEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="📝"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Category Name"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/on_surface"
            app:layout_constraintEnd_toStartOf="@+id/textViewActivityCount"
            app:layout_constraintStart_toEndOf="@+id/textViewCategoryEmoji"
            app:layout_constraintTop_toTopOf="@+id/imageViewCategoryIcon" />

        <TextView
            android:id="@+id/textViewActivityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 activities"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/on_surface_variant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCategoryEmoji" />

        <TextView
            android:id="@+id/textViewTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12.5 hours total"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/on_surface_variant"
            app:layout_constraintStart_toStartOf="@+id/textViewCategoryName"
            app:layout_constraintTop_toBottomOf="@+id/textViewCategoryName" />

        <TextView
            android:id="@+id/textViewIsDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/default_badge_background"
            android:padding="4dp"
            android:text="Default"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/on_primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActivityCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
